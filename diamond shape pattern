#include<iostream>
using namespace std;

int main()
{
    int no1;
    cout << "Enter no 1 :- ";
    cin >> no1;
    
    for(int i=1;i<=no1;i++)
    {
        for(int j=no1;j>i;j--)
        {
            cout << " ";
        }
        for(int j=0;j<i;j++)
        {
            cout << "*";
        }
        for(int j=1;j<i;j++)
        {
            cout << "*";
        }
        cout << "\n";
    }
    for(int i=no1-1;i>=1;i--)
    {
        for(int j=no1;j>i;j--)
        {
            cout << " ";
        }
        for(int j=0;j<i;j++)
        {
            cout << "*";
        }
        for(int j=1;j<i;j++)
        {
            cout << "*";
        }
        cout << "\n";
    }
}
