#include<iostream>
using namespace std;

int main()
{
    int no1,no2,no3;
    cout << "Enter no 1 :- ";
    cin >> no1;
    
    for(int i=1;i<=no1;i++)
    {
        for(int j=1;j<=i;j++)
        {
            cout << "*";    
        }
        for(int k=no1;k>i;k--)
        {
            cout << " ";
        }
        for(int m=no1-1;m>i;m--)
        {
            cout << " ";
        }
        for(int l=1;l<=i;l++)
        {
            cout << "*";    
        }
        cout << "\n";
    }
    for(int i=no1-1;i>0;i--)
    {
        for(int j=1;j<=i;j++)
        {
            cout << "*";    
        }
        for(int k=no1;k>i;k--)
        {
            cout << " ";
        }
        for(int m=no1-1;m>i;m--)
        {
            cout << " ";
        }
        for(int l=1;l<=i;l++)
        {
            cout << "*";    
        }
        cout << "\n";
    }
    
}
